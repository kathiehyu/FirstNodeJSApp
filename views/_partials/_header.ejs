<!-- // underscore means partial view (like a panel) -->
<!-- // create a partial bc they always appear, don't have to recreate -->
<html>
    <head>
        <meta charset="utf8">
        <title>Node Tutorial</title>
        <link rel = "stylesheet" href =
        "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    </head>

    <body>
        <div class = "navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
               <div class="navbar-header">
               <a class="navbar-brand" href="/">Node Tutorial</a>
               </div>
               <ul class="nav navbar-nav navbar-right">
               <li><a href="/home">Home</a></li>
               <li><a href="/about">About</a></li>

               <% if (currentUser != null) { %>
                    <li><a href="/posts">My Posts</a></li>
                    <li><a href="#">Welcome <%= currentUser.username %> !</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
                
               <!-- creating the login and signup LINK -->
               <% if(currentUser == null) { %>
               <li><a href="/login">Log In</a></li>
               <li><a href="/signup">Sign Up</a></li>
               <% } %>
               </ul>
           </div>
        </div>
        <!-- <div call = "container"></div> -->
        <div class = "container">
            <% if (error && error.length > 0) { %>
                <div class = "alert alert-danger" role = "alert">
                    <%= error %> 
                </div>
            <% } %>
            <% if (info && info.length > 0) { %>
                <div class = "alert alert-info" role = "alert">
                    <%= info %> 
                </div>
            <% } %>
        </div>
<!-- // no closing body and html tag because we are leaving it open -->
<!-- // for other sections -->